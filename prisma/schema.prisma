// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email    String  @unique
  hash     String
  hashedRt String?
  qweqw String?
  posts    Contacts[]
  @@map("users")
}

model Contacts {
  contacts_id   Int     @id @default(autoincrement())
  name   String?
  address   String?
  description   String?
  phone     String
  author_id Int?
  author    User?   @relation(fields: [author_id], references: [id])
}